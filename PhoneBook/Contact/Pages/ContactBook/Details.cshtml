@page
@model Contact.Pages.ContactBook.DetailsModel
@{
    ViewData["Title"] = "Contact Details";
}

<br />
<h2 class="text-info">Contact Details</h2>
<br />

<div class="border container" style="padding:30px;">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Phones.FirstName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Phones.LastName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Phones.LonestarNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Phones.OrangeNumber)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Phones.Email)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Phones.FirstName)</td>
                <td>@Html.DisplayFor(model => model.Phones.LastName)</td>
                <td>@Html.DisplayFor(model => model.Phones.LonestarNumber)</td>
                <td>@Html.DisplayFor(model => model.Phones.OrangeNumber)</td>
                <td>@Html.DisplayFor(model => model.Phones.Email)</td>
            </tr>
        </tbody>
    </table>
    <div class="row mt-5">
        <div class="col-1">
            <a asp-page="Index" class="btn btn-outline-secondary form-control">Back</a>
        </div>
    </div>
</div>

